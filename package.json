{
  "name": "Codeck",
  "version": "1.0.0",
  "description": "Encode text into a deck of cards",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "webpack --env=prod && cp src/index.html dist",
    "postbuild": "cp -r images src/index.html dist",
    "start": "webpack-dev-server --env=dev &>/dev/null &",
    "stop": "pkill -f webpack-dev-server || true",
    "test": "jest",
    "lint": "standard --verbose | snazzy",
    "predeploy": "cp -r .circleci dist",
    "deploy": "gh-pages --dotfiles -d dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/epeterson320/cryptodeck.git"
  },
  "author": "Eric Peterson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/epeterson320/cryptodeck/issues"
  },
  "homepage": "https://github.com/epeterson320/cryptodeck#readme",
  "devDependencies": {
    "babel-jest": "^20.0.1",
    "babel-preset-es2015": "^6.22.0",
    "eslint": "^3.17.1",
    "jest": "^20.0.1",
    "serve": "^5.0.2",
    "snazzy": "^7.0.0",
    "standard": "^10.0.2",
    "webpack": "^2.5.1",
    "webpack-dev-server": "^2.4.5"
  },
  "dependencies": {
    "big.js": "^3.1.3",
    "d3": "^4.7.1"
  },
  "standard": {
    "env": [
      "jest",
      "browser"
    ]
  }
}
