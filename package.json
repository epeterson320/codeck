{
  "name": "codeck",
  "version": "1.0.0",
  "description": "Encode text into a deck of cards",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "yarn run clean",
    "build": "webpack -p",
    "postbuild": "cp -r images src/manifest.json dist",
    "start": "webpack-dev-server --env=dev",
    "test": "jest",
    "lint": "standard --verbose | snazzy",
    "size": "echo Minifed and gzipped: $((`gzip -9 -c dist/bundle.js | wc -c`/1000))KB",
    "predeploy": "cp -r .circleci dist",
    "deploy": "gh-pages --dotfiles -d dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/epeterson320/codeck.git"
  },
  "author": "Eric Peterson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/epeterson320/codeck/issues"
  },
  "homepage": "https://github.com/epeterson320/codeck#readme",
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "babel-core": "^6.24.1",
    "babel-jest": "^20.0.1",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-es2015": "^6.22.0",
    "css-loader": "^0.28.2",
    "eslint": "^3.17.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "gh-pages": "^1.0.0",
    "html-webpack-plugin": "^2.28.0",
    "jest": "^20.0.1",
    "node-sass": "^9.0.0",
    "normalize-scss": "^7.0.0",
    "postcss-loader": "^2.0.5",
    "sass-loader": "^6.0.5",
    "serve": "^5.0.2",
    "snazzy": "^7.0.0",
    "standard": "^10.0.2",
    "style-ext-html-webpack-plugin": "^3.4.1",
    "style-loader": "^0.18.0",
    "webpack": "^2.5.1",
    "webpack-dev-server": "^2.4.5"
  },
  "dependencies": {
    "big.js": "^3.1.3",
    "d3": "^4.7.1"
  },
  "standard": {
    "env": [
      "jest",
      "browser"
    ]
  }
}
